<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/launch_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/launch" />

    <ImageView
        android:id="@+id/launch_logo"
        android:layout_width="274dp"
        android:layout_height="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo"
        app:layout_constraintVertical_bias="0.2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9">

        <com.telemetry.outputsleepapp.font.SomeButton
            android:id="@+id/launch_sign_in"
            android:layout_width="283dp"
            android:layout_height="51dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="561dp"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/purple_btn_image"
            android:onClick="onClick"
            android:text="Sign In"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textColor="#c2bbc2"/>
        <com.telemetry.outputsleepapp.font.SomeButton
            android:id="@+id/launch_sign_up"
            android:layout_width="283dp"
            android:layout_height="51dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="493dp"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/grey_btn_image"
            android:onClick="onClick"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textColor="#354368" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>