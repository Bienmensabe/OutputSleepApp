<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/sign_in_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/launch"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp">

        <ImageView
            android:id="@+id/sign_in_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:layout_marginTop="120dp"
            app:srcCompat="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginBottom="80dp">

            <com.telemetry.outputsleepapp.font.SomeButton
                android:id="@+id/launch_sign_in"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginBottom="4dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/purple_btn_image"
                android:onClick="onClick"
                android:text="@string/sign_in"
                android:textAllCaps="false"
                android:textSize="30sp"
                android:textColor="#c2bbc2" />

            <com.telemetry.outputsleepapp.font.SomeButton
                android:id="@+id/launch_sign_up"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="4dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/grey_btn_image"
                android:onClick="onClick"
                android:text="@string/sign_up"
                android:textAllCaps="false"
                android:textSize="30sp"
                android:textColor="#354368" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>